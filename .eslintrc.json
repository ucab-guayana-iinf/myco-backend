{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "airbnb-base",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
      "no-console": "off",
      "camelcase": "off",
      "linebreak-style": [
        "error",
        "windows"
      ],
      "import/no-extraneous-dependencies": [ "error", {
        "devDependencies": true,
        "optionalDependencies": false,
        "peerDependencies": false
      }]
    }
}
